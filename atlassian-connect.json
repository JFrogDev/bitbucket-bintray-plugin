{
  "key": "bitbucket-bintray-addon",
  "name": "BitBucket Bintray Add-On",
  "description": "A Bintray add-on for Atlassian Bitbucket",
  "vendor": {
    "name": "Noam Y. Tenne",
    "url": "www.10ne.org"
  },
  "baseUrl": "{{localBaseUrl}}",
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed",
    "uninstalled": "/uninstalled"
  },
  "modules": {
    "oauthConsumer": {
      "clientId": "{{consumerKey}}"
    },
    "adminPage": [
      {
        "key": "associate-package",
        "url": "/associate-package?repoPath={repo_path}",
        "name": {
          "value": "Associate Bintray Package"
        },
        "location": "org.bitbucket.repository.admin"
      },
      {
        "key": "associate-user",
        "url": "/associate-user?repoPath={repo_path}&bitBucketUsername={user_username}",
        "name": {
          "value": "Associate Bintray User"
        },
        "location": "org.bitbucket.account.admin"
      }
    ],
    "repoPage": [
      {
        "key": "browse-package-versions",
        "url": "/browse-package-versions?repoPath={repo_path}",
        "name": {
          "value": "Bintray Package"
        },
        "location": "org.bitbucket.repository.navigation",
        "conditions": [
          {
            "condition": "has_file",
            "params": {
              "filename": ".bintray-package.json"
            }
          }
        ]
      }
    ]
  },
  "scopes": [
    "account",
    "repository"
  ],
  "contexts": [
    "account"
  ]
}
